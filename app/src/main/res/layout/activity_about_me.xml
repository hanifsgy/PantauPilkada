<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hanifsugiyanto.pantau.Activity.DaftarKontestan"
    tools:showIn="@layout/app_bar_about_me">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/merahTua">
        <!--user change background?-->
        <!--<ImageView-->
            <!--android:id="@+id/iv_headerAboutMe"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="280dp"-->
            <!--android:background="@color/merahTua" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/circle_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/fb_white" />

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/twitte_whiter" />

                <ImageView
                    android:id="@+id/iv_googlePlus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gtalk" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_btnEditUser"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/edit_white" />

            <TextView
                android:id="@+id/tv_namaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="135dp"
                android:text="Suwarti"
                android:textColor="@color/putih"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_deskripsiUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:maxLines="3"
                android:text="nama saya suwarti"
                android:textColor="@color/putih" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="138dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pengamatAboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengamat"
                        android:textColor="@color/putih"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_pengawasAboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Pengawas"
                        android:textColor="@color/putih"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_saksiAboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:text="Saksi"
                        android:textColor="@color/putih"
                        android:textSize="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_jumlahPengamat"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/thumb_up_white" />

                    <ImageView
                        android:id="@+id/iv_jumlahPengawas"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/thumb_up_white" />


                    <ImageView
                        android:id="@+id/iv_jumlahSaksi"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/thumb_up_white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="164dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jumlahPengamat"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/circle_red"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/putih"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_jumlahPengawas"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_red"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/putih"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tv_jumlahSaksi"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/circle_red"
                        android:padding="2dp"
                        android:text="12"
                        android:textColor="@color/putih"
                        android:textSize="12dp" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>