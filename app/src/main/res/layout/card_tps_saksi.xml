<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih">
    <LinearLayout
        android:id="@+id/card_tps_saksi"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a40814"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bupati, Sleman, Yogyakarta"
                android:textSize="12sp"
                android:textColor="#fff"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/tps_white"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TPS "
                        android:textSize="12sp"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/tv_jmlTps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.232"
                        android:textSize="12sp"
                        android:textColor="#fff"/>
                    <ImageView
                        android:id="@+id/iv_btnCollapse"
                        android:layout_marginLeft="8dp"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:src="@drawable/accordion_up_white"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@color/abuMuda">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_noTps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Nomor TPS"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/textNoTps"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:background="@color/putih"
                        android:text="4"
                        android:textSize="50sp"/>
                </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutKeteranganTps"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/linearLayout"
                    android:layout_alignEnd="@+id/linearLayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peran anda di TPS ini : "
                        android:textSize="9sp"/>
                    <TextView
                        android:id="@+id/tv_peranUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_peran"
                        android:textSize="9sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/linearLayout">
                    <TextView
                        android:id="@+id/btn_pengamat"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="Pengamat"
                        android:textSize="12sp"
                        android:textColor="@color/putih"
                        android:background="@drawable/fill_abu_tua_rounded" />
                    <TextView
                        android:id="@+id/btn_pengawas"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="Pengawas"
                        android:textSize="12sp"
                        android:textColor="@color/putih"
                        android:background="@drawable/fill_abu_tua_rounded" />
                    <TextView
                        android:id="@+id/btn_saksi"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="Saksi"
                        android:textSize="12sp"
                        android:textColor="@color/putih"
                        android:background="@drawable/fill_merah_utama_rounded" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/card_childSaksi"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_grey">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"></android.support.v7.widget.RecyclerView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d0caca"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/iv_fotoBukti"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/camera_dark_grey"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center_vertical"
                                android:text="Mulai"
                                android:textSize="12sp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/calendar_dark_grey"/>
                                <TextView
                                    android:id="@+id/tv_tglMulai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="9 Desember 2015"
                                    android:textSize="10dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/clock_grey"/>
                                <TextView
                                    android:id="@+id/tv_jamMulai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="09.00 WIB"
                                    android:textSize="10dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center_vertical"
                                android:text="Selesai"
                                android:textSize="12sp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/calendar_dark_grey"/>
                                <TextView
                                    android:id="@+id/tv_tglSelesai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="9 Desember 2015"
                                    android:textSize="10dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/clock_grey"/>
                                <TextView
                                    android:id="@+id/tv_jamSelesai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="09.00 WIB"
                                    android:textSize="10dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center">

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/abuTua"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/user_dark_grey"/>
                            <TextView
                                android:id="@+id/tv_namaUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Nama User"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/group_dark_grey"/>
                            <TextView
                                android:id="@+id/tv_namaGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Nama Group"
                                android:textSize="10sp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/thumb_up_border_dark_grey"/>
                                <TextView
                                    android:id="@+id/tv_jmlUpVote"
                                    android:layout_width="20dp"
                                    android:layout_height="18dp"
                                    android:background="@drawable/circle_blue"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textSize="12sp"
                                    android:textColor="@color/putih"/>
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/thumb_down_border_dark_grey"/>
                                <TextView
                                    android:id="@+id/tv_jmlDownVote"
                                    android:layout_width="20dp"
                                    android:layout_height="18dp"
                                    android:background="@drawable/circle_blue"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textSize="12sp"
                                    android:textColor="@color/putih"/>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/fill_merah_utama_rounded"
                android:text="Mulai"
                android:textSize="30dp"
                android:textColor="@color/putih"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="* Tunggu hari H untuk memasukkan data"
                android:textSize="9sp"
                android:textStyle="italic"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/camera_dark_grey"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:gravity="left|top"
                        android:hint="Masukan keterangan ..."
                        android:textSize="12sp"
                        android:background="@drawable/border_grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:text="Submit"
                        android:textSize="12sp"
                        android:textColor="@color/putih"
                        android:background="@drawable/fill_abu_lbh_tua_rounded"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="* Isi setelah selesai perhitungan"
                android:textSize="9sp"
                android:textStyle="italic"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>