        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/twitter_blue" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
