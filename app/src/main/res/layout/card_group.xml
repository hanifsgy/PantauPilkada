<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="11dp">

    <RelativeLayout
        android:id="@+id/card_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_red"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">
               
                <ImageView
                    android:id="@+id/iv_fotoGroup"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/camera_dark_grey"
                    android:scaleType="center"
                    android:background="#ccc"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et_namaGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Group"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/abutLbhTua"/>

                    <TextView
                        android:id="@+id/et_deskripsiGroup"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/abutLbhTua"
                        android:text="Group ini adalah berisikan partai-partai negarawan indonesia"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_jumlahPengamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:text="123"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_jumlahPengawas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="43dp"
                            android:layout_marginTop="10dp"
                            android:text="123"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_jumlahSaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:layout_marginTop="10dp"
                            android:text="123"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_pengamatGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Pengamat"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_pengawasGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Pengawas"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_saksiGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:text="Saksi"
                            android:textColor="@color/abutLbhTua"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_btnGroup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/lock_bg_red"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/iv_imageGroup"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/group_grey"/>

                    <TextView
                        android:id="@+id/tv_jumlahGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:text="300"
                        android:textColor="@color/abutLbhTua"/>


                </LinearLayout>
            </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_judulGroupCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group card"
                android:textSize="10sp"
                android:textColor="#ea4653"
                android:background="@drawable/border_red"
                android:layout_marginLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2.5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>